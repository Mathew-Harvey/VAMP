{
  "name": "vessel-asset-management-platform",
  "version": "1.0.0",
  "description": "VAMP - Vessel Asset Management Platform MVP",
  "main": "server-simple.js",
  "scripts": {
    "start": "node server-simple.js",
    "dev": "nodemon server-simple.js",
    "prod": "node scripts/start-production.js",
    "backup": "node scripts/backup-db.js",
    "health": "node healthcheck.js",
    "docker:build": "docker build -t vamp .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/database:/app/database -v $(pwd)/uploads:/app/uploads vamp",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy": "bash scripts/deploy.sh"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "better-sqlite3": "^12.2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "express-session": "^1.17.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.4",
    "node-cron": "^3.0.0",
    "peer": "^0.6.1",
    "sharp": "^0.32.0",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.6.0",
    "sqlite3": "^5.1.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "VAMP Team",
  "license": "MIT"
}
