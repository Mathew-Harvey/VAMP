# Database (Render Postgres)
# Local / sync script: use Render "External" connection string (with ?sslmode=require)
# Deployed API on Render: use Render "Internal" connection string (no sslmode needed)
DATABASE_URL=postgresql://user:password@host:5432/marinestream?sslmode=require
# Optional dedicated DB for integration tests
TEST_DATABASE_URL=postgresql://user:password@host:5432/marinestream_test?sslmode=require

# Redis (for BullMQ)
REDIS_URL=redis://localhost:6379

# Auth
JWT_SECRET=your-secret-key-min-32-chars-change-me
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Storage (S3 or compatible)
S3_BUCKET=marinestream-media
S3_REGION=ap-southeast-2
S3_ACCESS_KEY=xxx
S3_SECRET_KEY=xxx
S3_ENDPOINT=

# Email (SMTP)
EMAIL_FROM=no-reply@example.com

# SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
RESEND_API_KEY=

# App
APP_URL=http://localhost:5173
API_URL=http://localhost:3001
NODE_ENV=development
PORT=3001

# Web app (set this in Render static site env vars)
# Example: https://marinestream-api.onrender.com/api/v1
VITE_API_URL=

# Rise-X sync (optional; for npm run sync:rise-x from apps/api)
# Use same Render External DATABASE_URL when running sync from your machine
RISE_X_API_URL=https://api-test.rise-x.io
RISE_X_API_KEY=
# Set after first sync (script prints: FLEET_ORG_ID=...)
FLEET_ORG_ID=
